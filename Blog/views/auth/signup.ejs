<%- include('../layouts/head.ejs') %>
<link rel="stylesheet" href="/style/forms.css">
<link rel="stylesheet" href="/style/login.css">
<%- include('../layouts/nav.ejs') %>
<main>
    <% if(errorMessage) { %>
    <div class="user-message user-message--error"> <%= errorMessage %> </div>
    <% } %>
    <form class="login-form" action="/signup" method="POST">
        <div class="div-form">
            <label for="nameF"> First Name </label>
            <input type="text" name="nameF" id="nameF" value=<%= nameF %>>
        </div>
        <div class="div-form">
            <label for="nameL"> Last Name </label>
            <input type="text" name="nameL" id="nameL" value=<%= nameL %>>
        </div>
        <div class="div-form">
            <label for="age"> Age </label>
            <input type="number" name="age" id="age" value=<%= age %>>
        </div>
         <div class="div-form">
             <label for="biography"> Biography  </label>
          <textarea class="<%= validationErr.find(e=> e.param==='biography') ? 'invalid' : '' %>" type="text" name="biography" id="biography" rows="5" cols="40"><%= biography %> </textarea>
         </div>
         <div class="div-form">
             <label for="gender"> Gender </label>
             <input type="text" name="gender" list="genderlist">
             <datalist id="genderlist">
                 <option value="Male">
                 <option value="Female">
                 <option value="Others">
             </datalist>
         </div>
        <div class="div-form">
            <label for="email"> Email </label>
            <input class="<%= validationErr.find(e=> e.param==='email') ? 'invalid' : '' %>" type="email" name="email" id="email" value=<%= emailS %>>
        </div>
        <div class="div-form">
            <label for="password"> Password </label>
            <input class="<%= validationErr.find(e=> e.param==='password') ? 'invalid' : '' %>" type="password" name="password" id="password" value=<%= password1 %>>
        </div>
        <div class="div-form">
            <label for="password"> Reconfirm Password </label>
            <input class="<%= validationErr.find(e=> e.param==='confirmpassword') ? 'invalid' : '' %>" type="password" name="confirmpassword" id="password" value=<%= password2 %>>
        </div>
       <input type="hidden" name="_csrf" value="<%= csrfToken%>">
        <button class="add-button" type="submit" class="btn"> Sign Up </button>
        </input>
    </form>
</main>
<%- include('../layouts/foot.ejs') %>